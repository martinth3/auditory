<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Define Persistence Unit -->
  <persistence-unit name="AuditoriaDS" transaction-type="JTA">
    <jta-data-source>java:/jboss/datasources/AuditoriaDS</jta-data-source>
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>py.com.audit.entity.Company</class>
    <class>py.com.audit.entity.Auditor</class>
    <class>py.com.audit.entity.Rol</class>
    <class>py.com.audit.entity.UserRol</class>
    <class>py.com.audit.entity.Risk</class>
    <class>py.com.audit.entity.BranchOffice</class>
    <class>py.com.audit.entity.VCompanyTree</class>
    <class>py.com.audit.entity.Area</class>
    <class>py.com.audit.entity.DetailArea</class>
    <class>py.com.audit.entity.DetailMatrix</class>
    <class>py.com.audit.entity.UserMatrix</class>
    <class>py.com.audit.entity.Matrix</class>
    <class>py.com.audit.entity.SubDetailMatriz</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/audit"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="12345"/>
    </properties>
  </persistence-unit>
</persistence>
